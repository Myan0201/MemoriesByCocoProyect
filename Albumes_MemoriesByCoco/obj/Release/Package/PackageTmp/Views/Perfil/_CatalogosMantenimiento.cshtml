<script>

    document.getElementById("ContainerFrases").style.display = "none";
    $("#ContainerVinil").hide();
    $("#ContainerEstado").hide();
    $("#ContainerPreguntas").hide();
    $("#ContainerPrecios").hide();
    $("#ContenedorParametros").hide();
    async function MantenimientoFrases() {
        try {
            await QuitarOpciones();
            await MostrarFrases();
        } catch (Exception) {

        }
    }


