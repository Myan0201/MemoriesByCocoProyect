        CambiarPaginaFrases(0)

       
        document.getElementById("ContainerFrases").style.display = "block";
    }

    function MostrarCatalogoVinil() {
        $("#ContainerProgressBar").show();
        $("#ContainerVinil").show();
        $(".PaginaMantenimientos").hide();


