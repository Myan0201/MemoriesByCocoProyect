        CantidadPaginasVinil();

    }

    function MostrarCatalogoEstado() {
        $("#ContainerProgressBar").show();
       
        $("#ContainerEstado").show();
        $(".PaginaMantenimientos").hide();
        TraerDatosTablaEstado();
    }



    async function QuitarOpciones() {

        $(".PaginaMantenimientos").hide();




    }

    function MostrarPreguntas() {
        $("#ContainerProgressBar").show();
        $(".PaginaMantenimientos").hide();
        TraerDatosTablaPreguntas();
        $("#ContainerPreguntas").show();
    }

    function AbrirMantenimientoPrecios() {
        $("#ContainerProgressBar").show();
        $(".PaginaMantenimientos").hide();
        TraerDatosTablaPrecios();
        $("#ContainerPrecios").show();


    }

    function AbrirMantenimientoParametros() {
        $("#ContainerProgressBar").show();
        $(".PaginaMantenimientos").hide();
        $("#ContenedorParametros").show();
        ConsultarParametros();
        $("#ContainerProgressBar").hide();
    }



</script>



