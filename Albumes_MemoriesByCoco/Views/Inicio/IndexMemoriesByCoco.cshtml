                     $("#Parametro" + result[i].id).html(result[i].descripcion);
                 }


        },
        error: function (r) {

           // alert("Error inesperado.");
        }




    })


 
 




    function EnviarCorreoContacto() {
       var objContacto = {

          nombre:  $("#name").val(),
        correo: $("#email").val(),
        telefono:$("#phone").val(),
        mensaje:$("#message").val()

        }


        $.ajax({


            url: '@Url.Action("EnvioCorreoContacto", "Inicio")',
            type: "POST",
            data: objContacto,

             success: function (result) {
                 alert("¡Correo enviado con éxito!")
                 $("#name").val(""),
                 $("#email").val(""),
                 $("#phone").val(""),
                 $("#message").val("")
            },
            error: function (r) {

                //alert("Error inesperado.");
            }


     })
    }




    function ConsultarColorInicio() {
        $.ajax({

            url: '@Url.Action("ConsultarColor", "Inicio")',
            type: "POST",

            success: function (result) {


                var lista = document.getElementsByClassName("ColorInicio");


                for (i = 0; i < lista.length; i++) {
                    lista[i].style.backgroundColor = result;
                }


                document.getElementById("btnConocenos").style.borderColor = result;
                document.getElementById("submitButton").style.borderColor = result;
      

                var listaLetra = document.getElementsByClassName("letraInicio");


                for (i = 0; i < listaLetra.length; i++) {
                    listaLetra[i].style.color = result;
                }


            },
            error: function (r) {

                //alert("Error inesperado.");
            }




            }
        )
    }







</script>

