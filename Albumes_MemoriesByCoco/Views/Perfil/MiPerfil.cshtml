<script>
    CambioPagina(PaginaInicioUsuario)
    $("#ContainerProgressBar").hide();
    function CambioPagina(idPaginaMostrar) {
        console.log(idPaginaMostrar + "ccc");
        var lista = document.getElementsByClassName("PaginaPerfil");


        for (i = 0; i < lista.length; i++) {
            lista[i].style.display = "none";
        }

        idPaginaMostrar.style.display = "block";

    }

    function MostrarCarga() {
        $("#ContainerProgressBar").show();
    }


    function OcultarCarga() {
        $("#ContainerProgressBar").hide();
    }

    function MostrarPedidosAdmin() {
        $("#ContainerProgressBar").show();


        var lista = document.getElementsByClassName("PaginaPerfil");


        for (i = 0; i < lista.length; i++) {
            lista[i].style.display = "none";
        }
        
        document.getElementById("PaginaPedidoAdmin").style.display = "block";

        CambiarPaginaPedidoAdmin(0);

    }


</script>

