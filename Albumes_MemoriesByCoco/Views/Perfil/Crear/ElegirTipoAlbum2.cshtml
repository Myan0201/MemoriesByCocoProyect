<script>

    function IrElegirSticker(strTipo) {
        $.ajax({
            url: '@Url.Action("TipoAlbum", "Perfil")',
            type: "POST",
            data: { strTipoAlbum: strTipo },
            success: function (result) {
                SiguienteStep();
                $("#ContainerVinilUsuario").show();
                $("#ElegirTipoAlbumPersonalizado").hide();
                CambiarPaginaVinilU(0)
            }
        })
    }

    function OcultarElegirTipoAlbum2() {
        $("#ElegirTipoAlbumPersonalizado").hide();
        $("#ElegirTipoAlbumPre").show();
        $("#StepContainer").hide();

    }


    var variables = document.getElementsByClassName("fit");


    for (i = 0; i < variables.length; i++) {



        setTimeout(

            Call(i)

            , 50000
        )

    }
    function Call(i) {
        if (i % 2 == 0) {
            variables[i].style.animationName = "mostrarFotoTop";
            variables[i].style.animationDuration = "3000ms";

        } else {
            variables[i].style.animationName = "mostrarFotoBottom";
            variables[i].style.animationDuration = "3000ms";
        }

        

        
    }

   

</script>


