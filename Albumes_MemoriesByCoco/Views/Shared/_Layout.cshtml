<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link href="estilos.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mea+Culpa&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mea+Culpa&display=swap" rel="stylesheet">

</head>
<body>
    <div class="">
        <a href="https://api.whatsapp.com/send?phone=62980944" class="logoWs"><i class="fa-brands fa-whatsapp"></i></a>




        @RenderBody()


    </div>


    <div class="container body-content">

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Styles.Render("~/Estilos/EstilosInicio.css")
    @Styles.Render("~/Estilos/Perfil.css")
    @Styles.Render("~/Estilos/EstilosBarra.css")
    @Styles.Render("~/Estilos/EstiloGeneral.css")
    @Styles.Render("~/Estilos/EstiloBook.css")
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
    @Scripts.Render("https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    @Scripts.Render("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
    @Styles.Render("https://fonts.googleapis.com/css?family=RobotoDraft:400,500,700,400italic")



    <style>
        .TamanioLetraNav {
            font-size: 40px;
            text-decoration: none;
        }

        .logoWs {
            color: #4FCE5D;
            font-size: 60px;
            position: fixed;
            z-index: 100;
            margin-left: 92vw;
            margin-top: 85vh;
        }

            .logoWs:hover {
                cursor: pointer;
            }

        body {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        
        }

        .body-background {
            background-image: radial-gradient(circle at 0% 0%, #c037b5 0, #a331a9 25%, #842b9b 50%, #66248b 75%, #4b1f7d 100%);
        }

        .body-contenido {
            border-radius: 50px;
            width: 90vw;
            height: 90vh;
            margin: auto;
            background: rgb(15,29,101);
            background: radial-gradient(circle, rgba(15,29,101,1) 0%, rgba(41,8,65,1) 89%);
            box-shadow: 4px 8px 30px black;
        }

        body {
        }

        .border-radius-nav {
            border-radius: 50px;
        }

        .item-navbar {
            text-decoration: none;
        }

        .FondoMorado {
            background-color: #6d28d9;
        }
    </style>
</body>

</html>
